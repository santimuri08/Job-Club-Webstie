{
  "name": "eleventy-portfolio",
  "version": "1.0.0",
  "description": "Professional portfolio website built with Eleventy and Nunjucks",
  "type": "module",
  "main": "index.js",
  "scripts": {
    "build:css": "npx tailwindcss -i ./src/css/tailwind.css -o ./_site/css/main.css --minify",
    "build:css:prod": "NODE_ENV=production npx tailwindcss -i ./src/css/tailwind.css -o ./_site/css/main.css --minify",
    "build:js": "node build-alpine.js",
    "watch:css": "npx tailwindcss -i ./src/css/tailwind.css -o ./_site/css/main.css --watch",
    "watch:js": "node build-alpine.js --watch",
    "build:eleventy": "eleventy",
    "build": "npm-run-all --parallel build:css:prod build:js && npm run build:eleventy",
    "dev": "npm run build:eleventy && npm-run-all --parallel watch:css watch:js dev:eleventy",
    "dev:eleventy": "eleventy --serve --watch --port=8080",
    "serve": "eleventy --serve --port=8080",
    "start": "npm run dev",
    "clean": "rm -rf _site",
    "test": "playwright test",
    "test:ui": "playwright test --ui",
    "test:headed": "playwright test --headed",
    "test:update": "playwright test --update-snapshots",
    "test:report": "playwright show-report",
    "lighthouse": "lighthouse http://localhost:8080 --view --output html --output-path ./lighthouse-report.html",
    "lighthouse:ci": "lhci autorun",
    "format": "prettier --write \"**/*.{js,mjs,json,css,md,njk,html}\"",
    "format:check": "prettier --check \"**/*.{js,mjs,json,css,md,njk,html}\"",
    "lint:js": "eslint \"**/*.{js,mjs}\"",
    "lint:js:fix": "eslint \"**/*.{js,mjs}\" --fix",
    "lint:css": "stylelint \"**/*.css\"",
    "lint:css:fix": "stylelint \"**/*.css\" --fix",
    "lint:md": "markdownlint-cli2 \"**/*.md\" \"!node_modules\" \"!_site\"",
    "lint:md:fix": "markdownlint-cli2 --fix \"**/*.md\" \"!node_modules\" \"!_site\"",
    "lint": "npm-run-all --parallel lint:js lint:css lint:md format:check",
    "lint:fix": "npm-run-all lint:js:fix lint:css:fix lint:md:fix format",
    "prepare": "husky install",
    "validate": "npm-run-all lint:fix build test",
    "docker:dev": "docker compose --profile dev up --build",
    "docker:prod": "docker compose --profile production up -d --build",
    "docker:stop": "docker compose --profile dev --profile production down",
    "docker:clean": "docker compose --profile dev --profile production down -v"
  },
  "keywords": [
    "eleventy",
    "nunjucks",
    "portfolio",
    "static-site",
    "github-pages"
  ],
  "author": "Keith Williams",
  "license": "MIT",
  "devDependencies": {
    "@11ty/eleventy": "^3.0.0",
    "@11ty/eleventy-img": "^6.0.4",
    "@alpinejs/focus": "^3.15.1",
    "@commitlint/cli": "^20.1.0",
    "@commitlint/config-conventional": "^20.0.0",
    "@eslint/js": "^9.39.1",
    "@headlessui/tailwindcss": "^0.2.2",
    "@lhci/cli": "^0.15.1",
    "@playwright/test": "^1.56.1",
    "@tailwindcss/container-queries": "^0.1.1",
    "@tailwindcss/typography": "^0.5.19",
    "alpinejs": "^3.15.1",
    "autoprefixer": "^10.4.21",
    "esbuild": "^0.25.12",
    "eslint": "^9.39.1",
    "globals": "^16.5.0",
    "husky": "^9.1.7",
    "lighthouse": "^13.0.1",
    "lint-staged": "^16.2.6",
    "markdown-it": "^14.1.0",
    "markdown-it-anchor": "^9.2.0",
    "markdownlint-cli2": "^0.18.1",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.5.6",
    "prettier": "^3.6.2",
    "stylelint": "^16.25.0",
    "stylelint-config-standard": "^39.0.1",
    "tailwindcss": "^3.4.18"
  },
  "dependencies": {
    "@11ty/eleventy-plugin-rss": "^2.0.4",
    "web-vitals": "^5.1.0"
  }
}
