{# Project Card Component #} {% macro projectCard(project) %} {% if project and project.data %}
<article
  class="group relative bg-white rounded-lg border-4 border-neutral-900 overflow-hidden hover-lift"
  data-component="project-card"
>
  {% if project.data.image %}
  <div class="overflow-hidden">
    <img
      src="{{ project.data.image }}"
      alt="{{ project.data.title or 'Project image' }}"
      class="card-image-height transition-transform duration-300 group-hover:scale-105"
      loading="lazy"
      width="400"
      height="300"
    />
  </div>
  {% endif %}

  <div class="p-6">
    <h3 class="text-2xl font-bold mb-3 text-neutral-900">{{ project.data.title or 'Untitled Project' }}</h3>

    <p class="text-neutral-600 mb-4 text-fluid-body">{{ project.data.description or 'No description available.' }}</p>

    {% if project.data.tech %}
    <div class="flex flex-wrap gap-2 mb-4">
      {% for tech in project.data.tech %}
      <span class="px-3 py-1 text-sm font-medium bg-neutral-100 text-neutral-700 border-2 border-neutral-900 rounded">
        {{ tech }}
      </span>
      {% endfor %}
    </div>
    {% endif %}

    <div class="flex gap-4">
      {% if project.data.demo %}
      <a href="{{ project.data.demo }}" class="btn-primary" target="_blank" rel="noopener noreferrer">
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="2"
            d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"
          ></path>
        </svg>
        View Demo
      </a>
      {% endif %} {% if project.data.github %}
      <a href="{{ project.data.github }}" class="btn-outline" target="_blank" rel="noopener noreferrer">
        <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
          <path
            fill-rule="evenodd"
            d="M12 2C6.477 2 2 6.484 2 12.017c0 4.425 2.865 8.18 6.839 9.504.5.092.682-.217.682-.483 0-.237-.008-.868-.013-1.703-2.782.605-3.369-1.343-3.369-1.343-.454-1.158-1.11-1.466-1.11-1.466-.908-.62.069-.608.069-.608 1.003.07 1.531 1.032 1.531 1.032.892 1.53 2.341 1.088 2.91.832.092-.647.35-1.088.636-1.338-2.22-.253-4.555-1.113-4.555-4.951 0-1.093.39-1.988 1.029-2.688-.103-.253-.446-1.272.098-2.65 0 0 .84-.27 2.75 1.026A9.564 9.564 0 0112 6.844c.85.004 1.705.115 2.504.337 1.909-1.296 2.747-1.027 2.747-1.027.546 1.379.202 2.398.1 2.651.64.7 1.028 1.595 1.028 2.688 0 3.848-2.339 4.695-4.566 4.943.359.309.678.92.678 1.855 0 1.338-.012 2.419-.012 2.747 0 .268.18.58.688.482A10.019 10.019 0 0022 12.017C22 6.484 17.522 2 12 2z"
            clip-rule="evenodd"
          ></path>
        </svg>
        View Code
      </a>
      {% endif %}
    </div>
  </div>
</article>
{% else %}
<article class="bg-white rounded-lg border-4 border-red-900 p-6">
  <p class="text-red-600">Project data not available</p>
</article>
{% endif %} {% endmacro %} {# Blog Post Card Component #} {% macro postCard(post) %} {% if post and post.data %}
<article
  class="group bg-white rounded-lg border-4 border-neutral-900 overflow-hidden hover-lift"
  data-component="blog-card"
>
  {% if post.data.image %}
  <div class="overflow-hidden">
    <img
      src="{{ post.data.image }}"
      alt="{{ post.data.title or 'Blog post image' }}"
      class="card-image-height transition-transform duration-300 group-hover:scale-105"
      loading="lazy"
      width="400"
      height="300"
    />
  </div>
  {% endif %}

  <div class="p-6">
    <div class="flex items-center gap-4 mb-3 text-sm text-neutral-600">
      <time datetime="{{ post.date | dateToISO }}"> {{ post.date | readableDate }} </time>
      {% if post.data.tags and post.data.tags.length > 0 %}
      <span class="px-3 py-1 bg-neutral-100 text-neutral-700 border-2 border-neutral-900 rounded font-medium">
        {{ post.data.tags[0] }}
      </span>
      {% endif %}
    </div>

    <h3 class="text-2xl font-bold mb-3 text-neutral-900 group-hover:text-primary-600 transition-colors">
      <a href="{{ post.url }}">{{ post.data.title or 'Untitled Post' }}</a>
    </h3>

    <p class="text-neutral-600 mb-4 text-fluid-body">{{ post.data.description or 'No description available.' }}</p>

    <a href="{{ post.url }}" class="btn-outline">
      Read Article
      <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
      </svg>
    </a>
  </div>
</article>
{% else %}
<article class="bg-white rounded-lg border-4 border-red-900 p-6">
  <p class="text-red-600">Post data not available</p>
</article>
{% endif %} {% endmacro %}
