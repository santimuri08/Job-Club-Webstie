{# Swiss Design Projects Section #}
<section
  data-component="featured-projects"
  data-section="projects"
  data-testid="featured-projects-section"
  style="padding-top: var(--space-5xl); padding-bottom: var(--space-5xl); background-color: var(--swiss-gray-100);"
>
  <div class="swiss-grid">
    {# Section Header - Left Aligned #}
    <div class="swiss-col-12" style="margin-bottom: var(--space-4xl);">
      <div style="max-width: 800px;">
        <p class="text-xs uppercase tracking-widest font-bold" style="color: var(--swiss-gray-600); margin-bottom: var(--space-md); letter-spacing: 0.15em;">
          02 — Selected Work
        </p>
        <h2 class="font-black" style="font-size: var(--fluid-h1); letter-spacing: -0.02em; line-height: 1.1;">
          Featured Projects
        </h2>
        <div style="width: 60px; height: 2px; background-color: var(--swiss-red); margin-top: var(--space-xl);"></div>
      </div>
    </div>
    
    {% if collections.projects and collections.projects.length > 0 %}
    {# Swiss Grid Layout for Projects #}
    <div class="swiss-col-12">
      <div class="grid grid-cols-1 lg:grid-cols-2 gap-0">
        {% for project in collections.projects | limit(3) %}
        {# Swiss Project Card - Geometric with Structure #}
        <article class="relative group" style="border: 2px solid var(--swiss-black); background-color: var(--swiss-white); transition: all 0.3s ease;">
          <div style="padding: var(--space-3xl);">
            {# Project Number #}
            <span class="font-black" style="font-size: var(--fluid-display); color: var(--swiss-gray-200); line-height: 1;">
              {{ "0" + loop.index if loop.index < 10 else loop.index }}
            </span>
            
            {# Project Title #}
            <h3 class="font-bold uppercase tracking-wider" style="font-size: var(--fluid-h3); margin-top: var(--space-lg); margin-bottom: var(--space-lg); letter-spacing: 0.05em;">
              {{ project.data.title }}
            </h3>
            
            {# Divider Line #}
            <div style="width: 48px; height: 2px; background-color: var(--swiss-red); margin-bottom: var(--space-lg);"></div>
            
            {# Project Description #}
            <p class="leading-relaxed" style="color: var(--swiss-gray-700); margin-bottom: var(--space-xl);">
              {{ project.data.description or "Innovative project showcasing technical excellence and creative problem-solving." }}
            </p>
            
            {# Tags as Definition List #}
            {% if project.data.tags %}
            <dl style="margin-bottom: var(--space-xl);">
              <dt class="text-xs uppercase tracking-widest font-bold" style="color: var(--swiss-gray-600); margin-bottom: var(--space-sm); letter-spacing: 0.15em;">
                Technologies
              </dt>
              <dd class="flex flex-wrap gap-2">
                {% for tag in project.data.tags %}
                <span class="text-xs uppercase tracking-wider font-bold" style="color: var(--swiss-black); border: 1px solid var(--swiss-black); padding: 0.25rem 0.75rem;">
                  {{ tag }}
                </span>
                {% endfor %}
              </dd>
            </dl>
            {% endif %}
            
            {# CTA Link #}
            <a href="{{ project.url }}" class="inline-flex items-center gap-2 font-bold uppercase tracking-wider text-sm group-hover:gap-4 transition-all" style="color: var(--swiss-black);">
              View Project
              <svg width="20" height="20" viewBox="0 0 20 20" fill="none" stroke="currentColor" stroke-width="2">
                <path d="M5 10h10M10 5l5 5-5 5" stroke-linecap="square"/>
              </svg>
            </a>
          </div>
          
          {# Hover Effect Border #}
          <div class="absolute inset-0 border-4 border-transparent group-hover:border-black transition-all pointer-events-none" style="margin: -2px;"></div>
        </article>
        {% endfor %}
      </div>
    </div>
    
    {# View All Link #}
    <div class="swiss-col-12" style="margin-top: var(--space-4xl); text-align: left;">
      <a href="/projects/" class="btn-swiss-accent">
        View All Projects
      </a>
    </div>
    {% else %}
    <div class="text-center py-12 bg-white rounded-lg border-2 border-neutral-200">
      <svg class="w-16 h-16 mx-auto mb-4 text-neutral-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path
          stroke-linecap="round"
          stroke-linejoin="round"
          stroke-width="2"
          d="M20 13V6a2 2 0 00-2-2H6a2 2 0 00-2 2v7m16 0v5a2 2 0 01-2 2H6a2 2 0 01-2-2v-5m16 0h-2.586a1 1 0 00-.707.293l-2.414 2.414a1 1 0 01-.707.293h-3.172a1 1 0 01-.707-.293l-2.414-2.414A1 1 0 006.586 13H4"
        ></path>
      </svg>
      <h3 class="text-xl font-semibold text-neutral-900 mb-2">No Projects Yet</h3>
      <p class="text-neutral-600">Check back soon for exciting projects!</p>
    </div>
    {% endif %}
  </div>
</section>

