---
layout: layouts/base.njk
title: Blog
description: Articles, tutorials, and insights about web development
pagination:
  data: collections.blog
  size: 10
  alias: posts
---

{% import "components/card.njk" as card %}

<section class="py-12 md:py-16 lg:py-20">
  <div style="max-width: 1440px; margin: 0 auto; padding-left: var(--swiss-grid-margin); padding-right: var(--swiss-grid-margin);">
    {# Swiss header - asymmetric with section number #}
    <div class="swiss-grid mb-12" style="border-left: 4px solid var(--swiss-red); padding-left: var(--space-md);">
      <div class="swiss-col-7">
        <p class="text-sm font-bold uppercase tracking-wider mb-2" style="color: var(--swiss-gray-600);">03 — ARTICLES</p>
        <h1 class="font-bold mb-4" style="font-size: var(--fluid-h1); line-height: 1.1; letter-spacing: -0.02em;">{{ title }}</h1>
        <p class="text-lg" style="color: var(--swiss-gray-700); max-width: 60ch;">{{ description }}</p>
      </div>
    </div>
    
    {# Structural divider #}
    <div class="swiss-divider mb-12"></div>
    
    {% if posts.length > 0 %}
    {# Swiss list layout - horizontal structure #}
    <div class="space-y-0">{% for post in posts %}
      {# Article row with Swiss structure #}
      <article class="swiss-grid py-6" style="border-bottom: 1px solid var(--swiss-gray-300);">
        {# Date column #}
        <div class="swiss-col-2">
          <time datetime="{{ post.data.date | dateToISO }}" class="text-sm font-bold uppercase tracking-wider" style="color: var(--swiss-gray-600);">
            {{ post.data.date | readableDate }}
          </time>
        </div>
        
        {# Content column #}
        <div class="swiss-col-7">
          <h2 class="font-bold mb-2" style="font-size: var(--fluid-h3); line-height: 1.2;">
            <a href="{{ post.url }}" class="hover:underline" style="text-decoration: none; color: var(--swiss-black);">{{ post.data.title }}</a>
          </h2>
          {% if post.data.description %}
          <p style="color: var(--swiss-gray-700);">{{ post.data.description }}</p>
          {% endif %}
        </div>
        
        {# Action column #}
        <div class="swiss-col-3 flex items-center justify-end">
          <a href="{{ post.url }}" class="btn-swiss-primary">READ ARTICLE</a>
        </div>
      </article>
    {% endfor %}</div>

    {% if pagination.pages.length > 1 %}
    {# Swiss pagination #}
    <div class="swiss-divider my-12"></div>
    <nav class="swiss-grid" aria-label="Blog pagination">
      <div class="swiss-col-12">
        <ul class="flex justify-end items-center gap-3">
          {% if pagination.previousPageLink %}
          <li>
            <a
              href="{{ pagination.previousPageLink }}"
              class="btn-swiss"
              aria-label="Previous page"
            >
              ← PREVIOUS
            </a>
          </li>
          {% endif %}
          {% for pageEntry in pagination.pages %}
          <li>
            <a
              href="{{ pagination.hrefs[ loop.index0 ] }}"
              class="btn-swiss {% if page.url == pagination.hrefs[ loop.index0 ] %}btn-swiss-primary{% endif %}"
              aria-label="Page {{ loop.index }}"
              {% if page.url == pagination.hrefs[ loop.index0 ] %}aria-current="page"{% endif %}
            >
              {{ loop.index }}
            </a>
          </li>
          {% endfor %}
          {% if pagination.nextPageLink %}
          <li>
            <a
              href="{{ pagination.nextPageLink }}"
              class="btn-swiss"
              aria-label="Next page"
            >
              NEXT →
            </a>
          </li>
          {% endif %}
        </ul>
      </div>
    </nav>
    {% endif %}
    {% else %}
    {# Swiss empty state #}
    <div class="py-16" style="border: 2px solid var(--swiss-gray-300);">
      <div class="swiss-grid">
        <div class="swiss-col-8 swiss-col-start-3">
          <p class="text-sm font-bold uppercase tracking-wider mb-4" style="color: var(--swiss-gray-600);">NO ARTICLES YET</p>
          <h2 class="font-bold mb-4" style="font-size: var(--fluid-h3);">Check Back Later</h2>
          <p style="color: var(--swiss-gray-700);">New insightful articles and tutorials coming soon.</p>
        </div>
      </div>
    </div>
    {% endif %}
  </div>
</section>
