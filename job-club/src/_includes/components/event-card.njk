<article class="event-card">
  <div class="event-date">
    <time datetime="{{ event.date }}">{{ event.date | dateFormat }}</time>
  </div>
  <h3 class="event-title">{{ event.title }}</h3>
  <p class="event-location">
    <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" aria-hidden="true">
      <path d="M21 10c0 7-9 13-9 13s-9-6-9-13a9 9 0 0 1 18 0z"/>
      <circle cx="12" cy="10" r="3"/>
    </svg>
    {{ event.location }}
  </p>
  <p class="event-description">{{ event.description }}</p>
  <div class="event-actions">
    {% if event.registrationLink %}
    <a href="{{ event.registrationLink }}" class="btn btn-primary" target="_blank" rel="noopener">Register</a>
    {% endif %}
    {% if event.zoomLink %}
    <a href="{{ event.zoomLink }}" class="btn btn-secondary" target="_blank" rel="noopener">Join Zoom</a>
    {% endif %}
  </div>
</article>