          <a href="/privacy/" class="nav-menu-item {% if pageId == 'privacy' %}active{% endif %}" data-page="privacy">
            <span class="nav-icon">ğŸ”’</span> Privacy
          </a>
          <div class="nav-menu-divider"></div>
          <!-- Introduction (big cube) at root -->
          <a href="/" class="nav-menu-item {% if pageId == 'intro' %}active{% endif %}" data-page="intro">
            <span class="nav-icon">âœ¦</span> Introduction
          </a>
          <a href="{{ site.discord }}" class="nav-menu-item nav-back" target="_blank" rel="noopener">
            <span class="nav-icon">ğŸ’¬</span> Discord
          </a>
        </div>
      </nav>
    </div>
  </header>
  
  <!-- Main Content -->
  <main class="main-content">
    {{ content | safe }}
  </main>
  
  <!-- Footer -->
  <footer class="footer">
    <div class="container">
