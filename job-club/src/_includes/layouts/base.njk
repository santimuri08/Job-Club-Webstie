            <div class="mini-face mini-left"></div>
            <div class="mini-face mini-top"></div>
            <div class="mini-face mini-bottom"></div>
          </div>
        </button>
        
        <div class="cube-nav-menu" id="nav-menu">
          <!-- Home goes to /home/ (main homepage with video) -->
          <a href="/home/" class="nav-menu-item {% if pageId == 'home' %}active{% endif %}" data-page="home">
            <span class="nav-icon">ğŸ </span> Home
