---
layout: layouts/base.njk
title: Events
description: Workshops, panels, and networking events to accelerate your AI career.
permalink: /events/
pageId: events
---

<div class="events-page">
  <!-- Main Content Area -->
  <section class="events-main">
    <div class="container">
      <div class="section-header">
        <span class="section-eyebrow">Learn & Connect</span>
        <h1 class="section-title">Events</h1>
        <p class="section-subtitle">Workshops, panels, and networking events to accelerate your AI career. All events are free for NJIT students.</p>
      </div>
      
      <!-- Event Tabs -->
      <div class="event-tabs" role="tablist" aria-label="Event categories">
        <button class="event-tab active" role="tab" aria-selected="true" data-tab="upcoming" id="tab-upcoming" aria-controls="panel-upcoming">
          <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <rect x="3" y="4" width="18" height="18" rx="2"/>
            <line x1="16" y1="2" x2="16" y2="6"/>
            <line x1="8" y1="2" x2="8" y2="6"/>
            <line x1="3" y1="10" x2="21" y2="10"/>
          </svg>
          Upcoming
          <span class="tab-count" id="upcoming-count">{{ events | selectattr("status", "equalto", "upcoming") | list | length }}</span>
        </button>
        <button class="event-tab" role="tab" aria-selected="false" data-tab="past" id="tab-past" aria-controls="panel-past">
          <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <circle cx="12" cy="12" r="10"/>
            <polyline points="12 6 12 12 16 14"/>
          </svg>
          Past Events
          <span class="tab-count" id="past-count">{{ events | selectattr("status", "equalto", "past") | list | length }}</span>
        </button>
      </div>
      
      <!-- Upcoming Events Panel -->
      <div class="event-panel active" id="panel-upcoming" role="tabpanel" aria-labelledby="tab-upcoming">
        <div class="events-list" id="upcoming-events-list">
          {% set upcomingEvents = events | selectattr("status", "equalto", "upcoming") | list %}
          {% for event in upcomingEvents %}
          <article class="event-list-item" data-event-id="{{ event.id }}" tabindex="0" role="button" aria-label="View details for {{ event.title }}">
            <div class="event-date-badge">
              <span class="event-month">{{ event.date | date("LLL") | upper }}</span>
              <span class="event-day">{{ event.date | date("d") }}</span>
            </div>
            
            <div class="event-list-content">
              <div class="event-list-meta">
                <span class="event-category-badge">{{ event.category }}</span>
                <span class="event-type-badge event-type-{{ event.type }}">
                  {% if event.type == 'virtual' %}
                  <svg width="12" height="12" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <rect x="2" y="3" width="20" height="14" rx="2"/>
                    <line x1="8" y1="21" x2="16" y2="21"/>
                    <line x1="12" y1="17" x2="12" y2="21"/>
                  </svg>
                  Virtual
                  {% else %}
                  <svg width="12" height="12" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <path d="M21 10c0 7-9 13-9 13s-9-6-9-13a9 9 0 0 1 18 0z"/>
                    <circle cx="12" cy="10" r="3"/>
                  </svg>
                  In-Person
                  {% endif %}
                </span>
              </div>
              
              <h3 class="event-list-title">{{ event.title }}</h3>
              
              <div class="event-list-details">
                <span class="event-detail">
                  <svg width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <circle cx="12" cy="12" r="10"/>
                    <polyline points="12 6 12 12 16 14"/>
                  </svg>
                  {{ event.time }}
                </span>
                <span class="event-detail">
                  <svg width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <path d="M21 10c0 7-9 13-9 13s-9-6-9-13a9 9 0 0 1 18 0z"/>
                    <circle cx="12" cy="10" r="3"/>
                  </svg>
                  {{ event.location }}
                </span>
              </div>
              
              <p class="event-list-description">{{ event.description | truncate(150) }}</p>
            </div>
            
            <div class="event-list-action">
              {% if event.spotsLeft and event.spotsLeft <= 10 %}
              <span class="spots-warning">Only {{ event.spotsLeft }} spots left!</span>
              {% endif %}
              <span class="view-details">
                View Details
                <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                  <polyline points="9 18 15 12 9 6"/>
                </svg>
              </span>
            </div>
          </article>
          {% else %}
          <div class="empty-state">
            <svg width="48" height="48" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
              <rect x="3" y="4" width="18" height="18" rx="2"/>
              <line x1="16" y1="2" x2="16" y2="6"/>
              <line x1="8" y1="2" x2="8" y2="6"/>
              <line x1="3" y1="10" x2="21" y2="10"/>
            </svg>
            <h3>No Upcoming Events</h3>
            <p>Check back soon for new events, or view our past events.</p>
          </div>
          {% endfor %}
        </div>
      </div>
      
      <!-- Past Events Panel -->
      <div class="event-panel" id="panel-past" role="tabpanel" aria-labelledby="tab-past" hidden>
        <div class="events-list" id="past-events-list">
          {% set pastEvents = events | selectattr("status", "equalto", "past") | list %}
          {% for event in pastEvents %}
          <article class="event-list-item past" data-event-id="{{ event.id }}" tabindex="0" role="button" aria-label="View details for {{ event.title }}">
            <div class="event-date-badge past">
              <span class="event-month">{{ event.date | date("LLL") | upper }}</span>
              <span class="event-day">{{ event.date | date("d") }}</span>
            </div>
            
            <div class="event-list-content">
              <div class="event-list-meta">
                <span class="event-category-badge">{{ event.category }}</span>
                {% if event.attendees %}
                <span class="event-attendees-badge">
                  <svg width="12" height="12" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <path d="M17 21v-2a4 4 0 0 0-4-4H5a4 4 0 0 0-4 4v2"/>
                    <circle cx="9" cy="7" r="4"/>
                    <path d="M23 21v-2a4 4 0 0 0-3-3.87"/>
                    <path d="M16 3.13a4 4 0 0 1 0 7.75"/>
                  </svg>
                  {{ event.attendees }} attended
                </span>
                {% endif %}
              </div>
              
              <h3 class="event-list-title">{{ event.title }}</h3>
              
              <div class="event-list-details">
                <span class="event-detail">
                  <svg width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <rect x="3" y="4" width="18" height="18" rx="2"/>
                    <line x1="16" y1="2" x2="16" y2="6"/>
                    <line x1="8" y1="2" x2="8" y2="6"/>
                    <line x1="3" y1="10" x2="21" y2="10"/>
                  </svg>
                  {{ event.date | date("LLLL d, yyyy") }}
                </span>
                <span class="event-detail">
                  <svg width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <path d="M21 10c0 7-9 13-9 13s-9-6-9-13a9 9 0 0 1 18 0z"/>
                    <circle cx="12" cy="10" r="3"/>
                  </svg>
                  {{ event.location }}
                </span>
              </div>
              
              <p class="event-list-description">{{ event.description | truncate(150) }}</p>
            </div>
            
            <div class="event-list-action">
              {% if event.recordingUrl %}
              <span class="recording-available">
                <svg width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                  <polygon points="5 3 19 12 5 21 5 3"/>
                </svg>
                Recording Available
              </span>
              {% endif %}
              <span class="view-details">
                View Details
                <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                  <polyline points="9 18 15 12 9 6"/>
                </svg>
              </span>
            </div>
          </article>
          {% else %}
          <div class="empty-state">
            <svg width="48" height="48" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
              <circle cx="12" cy="12" r="10"/>
              <polyline points="12 6 12 12 16 14"/>
            </svg>
            <h3>No Past Events Yet</h3>
            <p>Check back after our first events have taken place.</p>
          </div>
          {% endfor %}
        </div>
      </div>
    </div>
  </section>
  
  <!-- Event Drawer (Slide-out Panel) -->
  <aside class="event-drawer" id="event-drawer" aria-hidden="true">
    <div class="drawer-backdrop" id="drawer-backdrop"></div>
    <div class="drawer-panel">
      <button class="drawer-close" id="drawer-close" aria-label="Close event details">
        <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
          <line x1="18" y1="6" x2="6" y2="18"/>
          <line x1="6" y1="6" x2="18" y2="18"/>
        </svg>
      </button>
      
      <!-- Drawer Content (Scrollable) -->
      <div class="drawer-content">
        <!-- Drawer Header -->
        <div class="drawer-header">
          <div class="drawer-meta">
            <span class="drawer-category" id="drawer-category"></span>
            <span class="drawer-type" id="drawer-type"></span>
          </div>
          <h2 class="drawer-title" id="drawer-title"></h2>
          <p class="drawer-description" id="drawer-description"></p>
        </div>
        
        <!-- Event Details Card -->
        <div class="drawer-card">
          <div class="detail-row">
            <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <rect x="3" y="4" width="18" height="18" rx="2"/>
              <line x1="16" y1="2" x2="16" y2="6"/>
              <line x1="8" y1="2" x2="8" y2="6"/>
              <line x1="3" y1="10" x2="21" y2="10"/>
            </svg>
            <span id="drawer-datetime"></span>
          </div>
          <div class="detail-row">
            <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <path d="M21 10c0 7-9 13-9 13s-9-6-9-13a9 9 0 0 1 18 0z"/>
              <circle cx="12" cy="10" r="3"/>
            </svg>
            <span id="drawer-location"></span>
          </div>
        </div>
        
        <!-- Spots Availability -->
        <div class="drawer-card spots-card" id="spots-card" hidden>
          <div class="spots-info" id="drawer-spots"></div>
        </div>
        
        <!-- Full Description -->
        <div class="drawer-section">
          <h3 class="drawer-section-title">
            <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <circle cx="12" cy="12" r="10"/>
              <path d="M12 16v-4M12 8h.01"/>
            </svg>
            About This Event
          </h3>
          <p class="drawer-text" id="drawer-full-description"></p>
        </div>
        
        <!-- Speakers Section -->
        <div class="drawer-section" id="speakers-section" hidden>
          <h3 class="drawer-section-title">
            <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <path d="M20 21v-2a4 4 0 0 0-4-4H8a4 4 0 0 0-4 4v2"/>
              <circle cx="12" cy="7" r="4"/>
            </svg>
            Speakers
          </h3>
          <div class="speakers-list" id="drawer-speakers"></div>
        </div>
        
        <!-- Agenda Section -->
        <div class="drawer-section" id="agenda-section" hidden>
          <h3 class="drawer-section-title">
            <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <line x1="8" y1="6" x2="21" y2="6"/>
              <line x1="8" y1="12" x2="21" y2="12"/>
              <line x1="8" y1="18" x2="21" y2="18"/>
              <line x1="3" y1="6" x2="3.01" y2="6"/>
              <line x1="3" y1="12" x2="3.01" y2="12"/>
              <line x1="3" y1="18" x2="3.01" y2="18"/>
            </svg>
            Agenda
          </h3>
          <div class="agenda-list" id="drawer-agenda"></div>
        </div>
        
        <!-- Resources Section (for past events) -->
        <div class="drawer-section" id="resources-section" hidden>
          <h3 class="drawer-section-title">
            <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <path d="M14 2H6a2 2 0 0 0-2 2v16a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V8z"/>
              <polyline points="14 2 14 8 20 8"/>
              <line x1="16" y1="13" x2="8" y2="13"/>
              <line x1="16" y1="17" x2="8" y2="17"/>
            </svg>
            Resources & Materials
          </h3>
          <div class="resources-list" id="drawer-resources"></div>
        </div>
        
        <!-- Action Buttons -->
        <div class="drawer-actions" id="drawer-actions-upcoming" hidden>
          <!-- Calendly Embed Button -->
          <a href="#" class="btn-drawer-primary" id="calendly-register-btn" target="_blank" rel="noopener">
            <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <rect x="3" y="4" width="18" height="18" rx="2"/>
              <line x1="16" y1="2" x2="16" y2="6"/>
              <line x1="8" y1="2" x2="8" y2="6"/>
              <line x1="3" y1="10" x2="21" y2="10"/>
              <path d="M9 16l2 2 4-4"/>
            </svg>
            Register via Calendly
          </a>
          
          <!-- Calendar Options -->
          <div class="calendar-options">
            <span class="calendar-label">Add to Calendar:</span>
            <div class="calendar-buttons">
              <a href="#" class="btn-calendar" id="google-cal-link" target="_blank" rel="noopener" title="Add to Google Calendar">
                <svg width="16" height="16" viewBox="0 0 24 24" fill="none">
                  <rect x="3" y="4" width="18" height="18" rx="2" stroke="currentColor" stroke-width="2"/>
                  <path d="M8 2v4M16 2v4M3 10h18" stroke="currentColor" stroke-width="2"/>
                </svg>
                Google
              </a>
              <a href="#" class="btn-calendar" id="ical-link" download title="Download .ics file">
                <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                  <path d="M21 15v4a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2v-4"/>
                  <polyline points="7 10 12 15 17 10"/>
                  <line x1="12" y1="15" x2="12" y2="3"/>
                </svg>
                iCal
              </a>
            </div>
          </div>
        </div>
        
        <!-- Past Event Actions -->
        <div class="drawer-actions" id="drawer-actions-past" hidden>
          <a href="#" class="btn-drawer-primary" id="watch-recording-btn" target="_blank" rel="noopener" hidden>
            <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <polygon points="5 3 19 12 5 21 5 3"/>
            </svg>
            Watch Recording
          </a>
        </div>
        
      </div>
    </div>
  </aside>
</div>

<!-- CTA Section -->
<section class="page-section">
  <div class="container">
    <div class="section-header center">
      <span class="section-eyebrow">Never Miss an Event</span>
      <h2 class="section-title">Join the Community</h2>
      <p class="section-subtitle">Get notified about upcoming events, workshops, and exclusive opportunities.</p>
      <div style="margin-top: 2rem; display: flex; gap: 1rem; justify-content: center; flex-wrap: wrap;">
        <a href="/join/" class="btn btn-primary">
          <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <path d="M16 21v-2a4 4 0 0 0-4-4H5a4 4 0 0 0-4 4v2"/>
            <circle cx="8.5" cy="7" r="4"/>
            <line x1="20" y1="8" x2="20" y2="14"/>
            <line x1="23" y1="11" x2="17" y2="11"/>
          </svg>
          Join Job Club
        </a>
        <a href="{{ site.discord }}" class="btn btn-secondary" target="_blank" rel="noopener">
          <svg width="16" height="16" viewBox="0 0 24 24" fill="currentColor">
            <path d="M20.317 4.37a19.791 19.791 0 0 0-4.885-1.515.074.074 0 0 0-.079.037c-.21.375-.444.864-.608 1.25a18.27 18.27 0 0 0-5.487 0 12.64 12.64 0 0 0-.617-1.25.077.077 0 0 0-.079-.037A19.736 19.736 0 0 0 3.677 4.37a.07.07 0 0 0-.032.027C.533 9.046-.32 13.58.099 18.057a.082.082 0 0 0 .031.057 19.9 19.9 0 0 0 5.993 3.03.078.078 0 0 0 .084-.028 14.09 14.09 0 0 0 1.226-1.994.076.076 0 0 0-.041-.106 13.107 13.107 0 0 1-1.872-.892.077.077 0 0 1-.008-.128 10.2 10.2 0 0 0 .372-.292.074.074 0 0 1 .077-.01c3.928 1.793 8.18 1.793 12.062 0a.074.074 0 0 1 .078.01c.12.098.246.198.373.292a.077.077 0 0 1-.006.127 12.299 12.299 0 0 1-1.873.892.077.077 0 0 0-.041.107c.36.698.772 1.362 1.225 1.993a.076.076 0 0 0 .084.028 19.839 19.839 0 0 0 6.002-3.03.077.077 0 0 0 .032-.054c.5-5.177-.838-9.674-3.549-13.66a.061.061 0 0 0-.031-.03z"/>
          </svg>
          Join Discord
        </a>
      </div>
    </div>
  </div>
</section>

<!-- Events Data for JavaScript -->
<script id="events-data" type="application/json">
{{ events | dump | safe }}
</script>

<script src="/js/events.js"></script>
