---
layout: layouts/base.njk
title: Event
pagination:
  data: events
  size: 1
  alias: event
permalink: /events/{{ event.slug }}/
---

<section class="page-section">
  <div class="container">
    <div class="section-header">
      <span class="section-eyebrow">Event</span>
      <h1 class="section-title">{{ event.title }}</h1>
      <p class="section-subtitle">{{ event.date | dateFormat("LLLL d, yyyy 'at' h:mm a") }}</p>
    </div>

    <div class="event-card" style="max-width: 900px; margin: 0 auto;">
      <p class="event-location">ğŸ“ {{ event.location }}</p>
      {% if event.description %}
      <p class="event-description">{{ event.description }}</p>
      {% endif %}

      <div class="event-actions" style="margin-top: 1.5rem;">
        {% if event.registrationUrl %}
        <a href="{{ event.registrationUrl }}" class="btn btn-primary" target="_blank" rel="noopener">Register</a>
        {% endif %}
        {% if event.zoomUrl %}
        <a href="{{ event.zoomUrl }}" class="btn btn-secondary" target="_blank" rel="noopener">Join Zoom</a>
        {% endif %}
        {% if event.mapUrl %}
        <a href="{{ event.mapUrl }}" class="btn btn-secondary" target="_blank" rel="noopener">Map</a>
        {% endif %}
      </div>

      {% if event.endDateTime %}
      <div style="margin-top: 1.5rem;">
        <a class="btn btn-secondary" target="_blank" rel="noopener" href="https://www.google.com/calendar/render?action=TEMPLATE&text={{ event.title | urlEncode }}&dates={{ event.date | toGoogleCalDate }}/{{ event.endDateTime | toGoogleCalDate }}&details={{ event.description | urlEncode }}&location={{ event.location | urlEncode }}">
          Add to Google Calendar
        </a>
      </div>
      {% endif %}
    </div>

    <div style="margin-top: 2rem; text-align: center;">
      <a href="/events/" class="btn btn-secondary">â† Back to Events</a>
    </div>
  </div>
</section>
